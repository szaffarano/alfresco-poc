<?xml version="1.0" encoding="UTF-8"?>
<model name="tecnowf:tecnoWorkflowModel" xmlns="http://www.alfresco.org/model/dictionary/1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.alfresco.org/model/dictionary/1.0 modelSchema.xsd">

	<description>Modelo de datos de los workflows</description>
	<author>Sebasti√°n Zaffarano</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm" />
		<import uri="http://tecno.afip.gob.ar/model/content/1.0" prefix="tecno" />
	</imports>

	<namespaces>
		<namespace uri="http://tecno.afip.gob.ar/model/workflow/1.0" prefix="tecnowf" />
	</namespaces>

	<types>
		<type name="tecnowf:iniciarConformidadTask">
			<parent>bpm:startTask</parent>
		</type>

		<type name="tecnowf:form1900">
			<parent>bpm:workflowTask</parent>
			<mandatory-aspects>
				<aspect>tecno:form1900Data</aspect>
			</mandatory-aspects>
		</type>

		<type name="tecnowf:conformidadForm1900">
			<parent>tecnowf:form1900</parent>
			<properties>
				<property name="tecnowf:conforme">
					<type>d:text</type>
					<default>Conforme</default>
					<constraints>
						<constraint type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>Conforme</value>
									<value>Controlar Conformidad</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
			<overrides>
				<property name="bpm:packageItemActionGroup">
					<default>read_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://tecno.afip.gob.ar/model/workflow/1.0}conforme</default>
				</property>
			</overrides>
		</type>

		<type name="tecnowf:cuantificacionPenalidad">
			<parent>tecnowf:conformidadForm1900</parent>
			<overrides>
				<property name="bpm:packageItemActionGroup">
					<default>read_package_item_actions</default>
				</property>
			</overrides>
			<mandatory-aspects>
				<aspect>tecno:incumplido</aspect>
			</mandatory-aspects>
		</type>

		<type name="tecnowf:aprobacionForm1900">
			<parent>tecnowf:cuantificacionPenalidad</parent>
			<properties>
				<property name="tecnowf:aprobado">
					<title>Aprobar</title>
					<type>d:text</type>
					<default>Aprobar</default>
					<constraints>
						<constraint type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>Aprobar</value>
									<value>Revisar</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
			<overrides>
				<property name="bpm:packageItemActionGroup">
					<default>read_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://tecno.afip.gob.ar/model/workflow/1.0}aprobado</default>
				</property>
			</overrides>
		</type>
	</types>

</model>
