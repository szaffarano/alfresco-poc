				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="aspect" condition="tecno:incumplido">
		<forms>
			<form>
				<field-visibility>
					<show id="tecno:numero" />
					<show id="tecno:motivo" />
					<show id="tecno:importe" />
				</field-visibility>
				<appearance>
					<field id="tecno:motivo" label-id="prop.tecno_numero" />
