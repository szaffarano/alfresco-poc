					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>

					<field id="tecno:areaResponsable" label-id="prop.tecno_areaResponsable" />
					<field id="tecno:direccion" label-id="prop.tecno_direccion" />
